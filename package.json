{
  "name": "v2land-url-shortener",
  "version": "1.0.0",
  "description": "URL shortener for v2land",
  "main": "index.js",
  "repository": "https://github.com/v2land/v2land-url-shortener",
  "author": "Xiaoxing Ye <ye@xiaoxing.us>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "hashids": "^1.2.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "pg": "^7.6.1",
    "pg-hstore": "^2.3.2",
    "redis": "^2.8.0",
    "sequelize": "^4.41.2",
    "typescript": "^3.1.6",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/hashids": "^1.0.30",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.33",
    "@types/redis": "^2.8.8",
    "@types/sequelize": "^4.27.31",
    "@types/valid-url": "^1.0.2",
    "eslint": "^5.9.0",
    "eslint-config-v2land": "^1.0.4",
    "eslint-plugin-typescript": "^0.13.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "sqlite3": "^4.0.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript-eslint-parser": "^20.1.1"
  },
  "scripts": {
    "build": "tsc",
    "dbsync": "yarn build && node dist/dbSync.js",
    "fix": "eslint --fix src/* && tslint -c tslint.json -p tsconfig.json --fix",
    "lint": "eslint src/* && tslint -c tslint.json -p tsconfig.json",
    "postbuild": "cp src/config.json dist/",
    "start": "yarn build && node dist/server.js",
    "test": "mocha tests/*.js --exit",
    "watch": "cp src/config.json dist/ && tsc -w",
    "watch-server": "nodemon --inspect --watch 'src/**/*' -e ts,tsx --exec 'node -r ts-node/register' ./src/server.ts"
  }
}
